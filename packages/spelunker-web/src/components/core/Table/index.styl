.table {
  width: 100%
  border-collapse: collapse

  td, th {
    padding: 9px
    border-top: 1px solid #121212
    box-shadow: inset 0 1px #2E2E2E
    font-weight: normal
  }

  th {
    text-align: left
    font-weight: bold
  }

  thead tr:first-child {
    td, th {
      border-top: none
      box-shadow: none
    }
  }

  tbody tr:nth-child(odd) {
    td, th {
      background: #252525
    }
  }
}
