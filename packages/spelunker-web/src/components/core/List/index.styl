.list {
  list-style-position: outside
  list-style-image: url('./images/bullet.png')
  padding-left: 20px

  .item {
    padding: .5em 0

    &.current {
      list-style-image: url('./images/bullet-current.png')
    }

    &:last-child {
      padding-bottom: .25em
    }
  }

  .list {
    margin-top: 1em
  }
}
