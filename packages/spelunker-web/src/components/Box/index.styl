.box {
  display: block
  position: relative
  padding: 20px
  margin-bottom: 20px
  border-radius: 5px
  box-shadow: rgba(255, 255, 255, 0.1) 0 1px 0,
              rgba(0, 0, 0, 0.8) 0 1px 7px 0px inset
  background: rgba(0, 0, 0, 0.3)

  legend {
    padding-bottom: 6px
    font-size: 20px
    color: #FFFFFF
    border-bottom: 1px solid #121212
    box-shadow: 0 1px #2E2E2E
  }

  > *:last-child {
    margin-bottom: 0
  }
}
