.tabbed {
  composes: box from '../index.styl'

  margin-top: 60px

  .tabs {
    position: absolute
    left: 0
    top: 0
    margin: 0
    padding: 0
    transform: translateY(calc(-100% + 6px))
    list-style-type: none
    font-size: 1em

    li {
      position: relative
      float: left
      margin-left: 7px
      padding: 0

      a {
        display: block
        position: relative
        padding: 10px 8px 18px
      }

      &.active {
        padding: 0 7px

        a {
          padding: 10px 16px 18px
          border-radius: 5px 5px 0px 0px
          box-shadow: inset 0 1px 7px 0px rgba(0, 0, 0, .8)
          background: #212121
          color: #FFFFFF
          text-decoration: none
          cursor: default

          span.label {
            position: relative
            z-index: 2
          }

          span.corners {
            display: block
            height: 15px
            position: absolute
            left: -7px
            right: -7px
            bottom: -2px
            z-index: 1
            overflow: hidden
            background: #212121

            &:before, &:after {
              content: ' '
              display: block
              width: 20px
              height: 20px
              position: absolute
              bottom: 8px
              background: #2F2F2F
              box-shadow: 0 1px 7px 0px rgba(0, 0, 0, 0.8)
            }

            &:before {
              left: -13px
              border-radius: 0 0 5px 0
            }

            &:after {
              right: -13px
              border-radius: 0 0 0 5px
            }
          }
        }
      }
    }
  }
}
